<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXSpinner?>
<?import com.jfoenix.controls.JFXTabPane?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="vsim.gui.controllers.MainController">
   <children>
      <fx:include fx:id="menuBar" source="MenuBar.fxml" />
      <SplitPane dividerPositions="0.7" orientation="VERTICAL" VBox.vgrow="ALWAYS">
         <items>
            <JFXTabPane fx:id="main">
               <tabs>
                  <Tab fx:id="editorTab" closable="false" text="Editor">
                     <content>
                        <fx:include fx:id="editor" source="Editor.fxml" />
                     </content>
                  </Tab>
                  <Tab fx:id="simTab" closable="false" text="Simulator">
                     <content>
                        <fx:include fx:id="simulator" source="Simulator.fxml" />
                     </content>
                  </Tab>
               </tabs>
               <cursor>
                  <Cursor fx:constant="DEFAULT" />
               </cursor>
            </JFXTabPane>
            <JFXTabPane fx:id="consoles" prefHeight="300.0" SplitPane.resizableWithParent="false">
               <tabs>
                  <Tab fx:id="consoleTab" closable="false" text="Console">
                     <content>
                        <TextArea fx:id="console" prefHeight="200.0" prefWidth="200.0" style="-fx-border-image-insets: 0; -fx-background-radius: 0; -fx-background-insets: 0; -fx-border-insets: 0;" />
                     </content>
                  </Tab>
               </tabs>
            </JFXTabPane>
         </items>
      </SplitPane>
      <HBox alignment="CENTER" spacing="5.0" style="-fx-background-color: #212121;">
         <children>
            <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../img/icons/logo.png" />
               </image>
            </ImageView>
            <Label fx:id="version" maxHeight="14.0" prefHeight="14.0" prefWidth="324.0" textFill="#dddddd">
               <font>
                  <Font name="Roboto Bold" size="14.0" />
               </font>
            </Label>
            <Pane HBox.hgrow="ALWAYS" />
            <JFXSpinner fx:id="progress" maxHeight="14.0" maxWidth="14.0" minHeight="14.0" minWidth="14.0" prefHeight="14.0" prefWidth="14.0" />
         </children>
         <padding>
            <Insets left="5.0" right="5.0" />
         </padding>
      </HBox>
   </children>
</VBox>
